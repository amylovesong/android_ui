<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <com.sun.ui.layout.SoftKeyboardHandledLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/provider_activity_sign_in_image_view_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="118dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:src="@mipmap/ic_launcher" />

        <EditText
            android:id="@+id/provider_activity_sign_in_et_phone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="78dp"
            android:hint="请输入手机号"
            android:text=""
            android:inputType="number"
            android:maxLength="11"
            android:gravity="center"
            android:textColorHint="#999999"
            android:textColor="#333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/provider_activity_sign_in_et_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="请输入密码"
            android:text=""
            android:inputType="textPassword"
            android:longClickable="false"
            android:gravity="center"
            android:textColorHint="#999999"
            android:textColor="#333333"
            android:textSize="16sp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/provider_activity_sign_in_bt_submit"
            android:text="登录"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/provider_activity_sign_in_tv_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginTop="17dp"
            android:text="忘记密码？"
            android:textSize="12sp"
            android:textColor="#666666"/>

    </com.sun.ui.layout.SoftKeyboardHandledLinearLayout>

    <TextView
        android:id="@+id/provider_activity_sign_in_tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="注册"
        android:textSize="14sp"
        android:textColor="#333333"/>

</RelativeLayout>
